              label(for="Débutant" onclick="") Débutant
              input#2(type="radio" name="level" value="Expert")
              label(for="Expert" onclick="") Expert
              br            
            input#inputNewGameForm(style="display:none" name="inputNewGameForm" value="inputNewGameForm")
            input#JOUER(type="submit" name="JOUER" value="JOUER")
          form#joinGameForm(name="joinGameForm" action="game" target="_self" method="POST")
            div
